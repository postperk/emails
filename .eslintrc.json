{
  "env": {
    "es6": true,
    "node": true,
    "jest": true
  },

  "extends": ["plugin:prettier/recommended"],

  "plugins": ["prettier"],

  "rules": {
    "prettier/prettier": "error",
    "no-unused-vars": "warn",
    "no-undef" : "error",
    "comma-dangle": ["error", "never"]
  },

  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 10
  }
}
